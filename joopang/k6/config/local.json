{
  "baseUrl": "http://localhost:8080",
  "headers": {
    "accept-language": "ko-KR",
    "x-market": "KR"
  },
  "defaults": {
    "thinkTime": 1,
    "productId": "P001",
    "cartSession": "sess-local"
  },
  "thresholds": {
    "http_req_duration": ["p(95)<350"],
    "checks": ["rate>0.99"]
  },
  "scenarios": {
    "smoke": {
      "vus": 1,
      "duration": "30s"
    },
    "load": {
      "stages": [
        { "duration": "1m", "target": 20 },
        { "duration": "3m", "target": 50 },
        { "duration": "1m", "target": 0 }
      ],
      "rampDownGracePeriod": "30s"
    }
  }
}
