{
  "baseUrl": "https://staging-api.joopang.internal",
  "headers": {
    "accept-language": "ko-KR",
    "x-market": "KR",
    "authorization": "Bearer <replace-with-token>"
  },
  "defaults": {
    "thinkTime": 0.5,
    "productId": "P1001",
    "cartSession": "sess-staging",
    "rushCouponTemplateId": 900,
    "rushProductId": 1000,
    "rushProductItemId": 1500,
    "rushUserStart": 1000,
    "rushUserCount": 2000,
    "couponIssueTemplateId": 900,
    "couponIssueUserStart": 1000,
    "couponIssueUserCount": 2000,
    "purchaseProductId": 1000,
    "purchaseProductItemId": 1500,
    "purchaseQuantity": 1,
    "purchaseUserStart": 1000,
    "purchaseUserCount": 2000
  },
  "thresholds": {
    "http_req_duration": ["p(95)<250", "p(99)<400"],
    "checks": ["rate>0.995"],
    "http_req_failed": ["rate<0.01"]
  },
  "scenarios": {
    "smoke": {
      "vus": 2,
      "duration": "1m"
    },
    "load": {
      "stages": [
        { "duration": "2m", "target": 20 },
        { "duration": "5m", "target": 80 },
        { "duration": "2m", "target": 0 }
      ],
      "rampDownGracePeriod": "1m"
    },
    "rush": {
      "vus": 2000,
      "maxDuration": "5m"
    },
    "couponIssue": {
      "stages": [
        { "duration": "1m", "target": 100 },
        { "duration": "4m", "target": 300 },
        { "duration": "1m", "target": 0 }
      ],
      "gracefulStop": "45s"
    },
    "purchaseStock": {
      "stages": [
        { "duration": "2m", "target": 60 },
        { "duration": "5m", "target": 150 },
        { "duration": "2m", "target": 0 }
      ],
      "gracefulStop": "1m"
    }
  }
}
